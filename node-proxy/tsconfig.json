{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "types": [
      "./src/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // "allowImportingTsExtensions": true,
    "allowJs": false,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
